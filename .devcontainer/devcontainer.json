{
    "name": "PHP Development",
    "image": "mcr.microsoft.com/vscode/devcontainers/php:8.3", // Chọn phiên bản PHP 8.3
    "features": {
      "composer": "latest",  // Cài Composer phiên bản mới nhất
      "php": "8.3.15"        // Cài PHP 8.3.15
    },
    "postCreateCommand": "composer install",  // Tự động cài đặt các phụ thuộc khi môi trường được tạo
    "settings": {
      "php.executablePath": "/usr/local/bin/php",
      "php.validate.executablePath": "/usr/local/bin/php"
    },
    "forwardPorts": [8000], // Cấu hình cổng để chạy Laravel
    "extensions": [
      "ms-php.php-pack", // Cài extension PHP cho VSCode trong Codespaces
      "esbenp.prettier-vscode"
    ]
  }
  