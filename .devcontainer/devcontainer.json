{
  "name": "PHP Development",
  "image": "mcr.microsoft.com/vscode/devcontainers/php:8.3",  // Docker image với PHP 8.3
  "features": {
    "composer": "latest",  // Cài đặt Composer phiên bản mới nhất
    "php": "8.3.15"        // Cài đặt PHP 8.3.15
  },
  "postCreateCommand": "composer install",  // Cài đặt các phụ thuộc Laravel tự động
  "settings": {
    "php.executablePath": "/usr/local/bin/php",  // Đảm bảo rằng đường dẫn PHP chính xác
    "php.validate.executablePath": "/usr/local/bin/php"
  },
  "forwardPorts": [8000],  // Mở cổng 8000 cho Laravel
  "extensions": [
    "ms-php.php-pack",  // Cài extension PHP cho VSCode trong Codespaces
    "esbenp.prettier-vscode"
  ]
}
